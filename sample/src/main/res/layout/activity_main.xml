<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trans_white_rectangle"
    android:id="@+id/drawer">

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_menu"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:itemTextColor="#3595b2"
        app:itemIconTint="#3595b2"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        >
    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="70dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <android.support.v7.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whitedark"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_background_blue"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="30dp"
                        android:layout_margin="10dp"
                        android:id="@+id/cv_search"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_parent"
                            >
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/search"
                                android:enabled="false"
                                android:layout_centerInParent="true"/>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/img_search"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </android.support.v7.widget.Toolbar>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Tat ca sach"
                    android:textColor="@color/colorSecondary" />


                <com.github.barteksc.sample.utilities.HorizontalListView
                    android:id="@+id/HorizontalListView_1"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/child_radius_background_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="sach duoc yeu thich nhat"
                    android:textColor="@color/colorSecondary" />

                <com.github.barteksc.sample.utilities.HorizontalListView
                    android:id="@+id/HorizontalListView_2"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/child_radius_background_white" />

                <TextView
                    android:id="@+id/foryou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Co the ban se thich"
                    android:textColor="@color/colorSecondary"
                    />

                <com.github.barteksc.sample.utilities.HorizontalListView
                    android:id="@+id/HorizontalListView_3"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/child_radius_background_white"
                    />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/yellow"
                    android:padding="12dp"
                    android:text="@string/report_title"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:targetApi="lollipop" />

            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/gradient_background_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/main" />
    </android.support.constraint.ConstraintLayout>



</android.support.v4.widget.DrawerLayout>